<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>

</head>
<body id="reg">
    <!-- seccion del header -->
    <%- include('./partials/header.ejs') %>
    <!-- seccion del header -->

    <!-- seccion de boton de busqueda -->
    <div class="search-form">

        <div id="close-search" class="fas fa-times"></div>

        <form action="">
            <input type="search" name="" placeholder="Que estas buscando?...." id="search-box">
            <label for="search-box" class="fas fa-search"></label>
        </form>
    </div>
    <main id="form">
        <div class="reg">
        <h1 class="mensaj">Bienvenido a Jujuy!</h1>
        <div class="regitr">
                
        
        <h1 class=" mensaje">Registráte</h1>
        <form action="/register" method="post" id="registro" enctype="multipart/form-data">
            <label for="user" >Mi foto</label>
            <input type="file" id="user" name="perfil">
            <%if(locals.errors && errors.perfil){%>
                <p class= "feedback"style="color: firebrick"> <%=errors.perfil.msg %> </p>
            <% } %>
            <input type="text" name="Nombre" id="Nombre" placeholder="Nombre" value="<%=locals.old&&old.Nombre%>">
            <%if(locals.errors && errors.Nombre){%>
                <p class= "feedback"style="color: firebrick"> <%=errors.Nombre.msg %> </p>
            <% } %>
            <label for="Nombre"></label>

            <input type="text" name="Apellido" id="Apellido" placeholder="Apellido" value="<%=locals.old&&old.Apellido%>">
            <%if(locals.errors && errors.Apellido){%>
                <p class= "feedback" style="color: firebrick;"><%= errors.Apellido.msg %> </p>
            <% } %>
            <label for="Apellido"></label>

            <input type="email" name="email" id="email" placeholder="E-mail" value="<%=locals.old&&old.email%>">
            <%if(locals.errors && errors.email){%>
                <p class= "feedback" style="color: firebrick"><%= errors.email.msg %> </p>
            <% } %>
            <label for="email"></label>
            
            <input type="password" name="contraseña" placeholder="Contraseña" id="contraseña" required value="<%=locals.old&&old.contraseña%>">
            <%if(locals.errors && errors.contraseña){%>
                <p class= "feedback"style="color: firebrick"> <%=errors.contraseña.msg %> </p>
            <% } %>
            <label for="contraseña"></label>

            <button type="submit">Registráte</button>

            <label class="frase">Ya tienes una cuenta?</label>
            <a href="/register/login">Inicia sesión</a>

        </form>
    
        </div>
    </div>
    </main>
    
</body>
</html>