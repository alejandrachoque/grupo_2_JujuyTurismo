<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>

    <!-- seccion del header -->
    <%- include('./partials/header.ejs') %>
    <!-- seccion del header -->

    <!-- seccion de boton de busqueda -->
    <div class="search-form">

        <div id="close-search" class="fas fa-times"></div>

        <form action="">
            <input type="search" name="" placeholder="Que estas buscando?...." id="search-box">
            <label for="search-box" class="fas fa-search"></label>
        </form>
    </div>
    <!-- seccion de boton de busqueda -->

    <!-- seccion del home -->
    <section class="home" id="home">
        <div class="box secondDetalle"
            style="background: url(https://i.gyazo.com/897344247eac255f3e3707c1a2374384.jpg) no-repeat;">
            <div class="content contentc" style="margin-top: 75px;">
                <div class="col-12">
                    <form action="/product" method="post" class="formulario" id="producto" enctype="multipart/form-data" >
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                                <label for="FirstName" class="form-label">Nombre del producto:</label>
                                <input type="text" id="FirstName" name="FirstName" placeholder="Ingrese nombre" class="form-input" value="<%=locals.old&&old.FirstName%>">
                                
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="FirstDescription" class="form-label">Titulo:</label>
                                <input type="text" id="FirstDescription" name="FirstDescription" placeholder="Ingrese nombre" class="form-input" value="<%=locals.old&&old.FirstDescription%>">
                            </div>
                            <div class="col-12">
                                <label for="Description" class="form-label">Descripci√≥n:</label>
                                <input id="Description" name="Description"  placeholder="Ingrese descripcion" class="form-input" value="<%=locals.old&&old.Description%>">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="Price" class="form-label">Precio del producto:</label>
                                <input type="number" id="Price" name="Price" placeholder="Ingrese precio" class="form-input" value="<%=locals.old&&old.Price%>">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="Link" class="form-label">Link del video:</label>
                                <input type="text" id="Link" name="Link" placeholder="Ingrese link" class="form-input" value="<%=locals.old&&old.Link%>">
                            </div>
                            <div class="col-12">
                                <label for="Imagen" class="form-label">Imagen del producto:</label>
                                <%if(locals.errors && errors.Imagen){%>
                                    <p class= "feedback" style="color: firebrick"><%= errors.Imagen.msg %> </p>
                                <% } %>
                                <input type="file" id="Imagen" name="Imagen"  class="btn">
                                 
                                <button type="submit" class="btn">Crear nuevo producto</button>
                            </div>
                            <div class="alerta" style="font-size: medium;">
                                    <ul>
                                        
                                    </ul> </div>
                        </div>
                        
                    </form>
                </div>
                <br>
            </div>
        </div>
    </section>
    <!-- seccion del home -->

    <script src="../../js/script.js"></script>
    
    
</body>

</html>